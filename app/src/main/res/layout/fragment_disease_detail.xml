<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.listDisease.DiseaseDetailFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginVertical="60dp"
        android:layout_marginHorizontal="30dp">
        <ImageView
            android:id="@+id/dgs_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ds_back_arrow_img"/>

        <TextView
            android:id="@+id/title_disease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginBottom="8dp"
            android:text="Name Disease"/>

        <ImageView
            android:id="@+id/image_disease"
            android:layout_width="320dp"
            android:layout_height="185dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:src="@drawable/vector_tea"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penjelasan Penyakit"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/greenGeneral"/>
        <TextView
            android:id="@id/desc_disease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:justificationMode="inter_word"
            android:text="desckirpsi penyakit"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pencegahan"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/greenGeneral"/>
        <TextView
            android:id="@id/desc_prevention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="desc Pencegahan"
            android:justificationMode="inter_word"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rekomendasi Penanganan"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/greenGeneral"/>
        <TextView
            android:id="@id/desc_recommended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="desc Penanganan"
            android:justificationMode="inter_word"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"/>
    </LinearLayout>
</FrameLayout>